{% extends 'admin/base/base.html.twig' %}

{% block title %}Réinitialisation de mot de passe{% endblock %}

{% block body %}
<section class="container reset-password my-3">
    <div class="row">
        <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12"></div>
        <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
            <div class="card shadow p-5">
                <h1 class="text-center mb-4 fw-bold">Réinitialisation de mot de passe</h1>
                {{ form_start(form) }}
                    {{ form_row(form.email) }}
                    <button type="submit" class="btn btn-primary btn-auth text-black mb-3" style="width: 100%;">Envoyer</button>
                    <a href="{{path('app_login')}}" class="btn btn-secondary" style="width: 100%;">Se Connecter</a>
                
                    {{ form_end(form) }}
            </div>
        </div>
        <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12"></div>

    </div>
</section>

{% endblock %}