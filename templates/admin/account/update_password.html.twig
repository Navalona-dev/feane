{% extends '@EasyAdmin/page/content.html.twig' %}

{% block page_title %}Feane Modification mot de passe {% endblock %}
{% block content_title %} {% endblock %}

{% block main %}

    <section class="password-update">
        <div class="container">
            <div class="row">
                <div class="col-xl-2 col-lg-1 col-md-12 col-sm-12"></div>
                <div class="col-xl-8 col-lg-10 col-md-12 col-sm-12">
                    <div class="card shadow p-5">
                        {% for message in app.flashes('danger') %}
                            <div class="alert alert-danger">
                                {{message}}
                            </div>
                        {% endfor %}
                        {{ form_start(form) }}
        
                        <h3 class="text-center mb-4 fw-bold fs-4"> Modification mot de passe </h3>
                              <div class="form-group mb-4">
                                <span class="error"> {{ form_errors(form.oldPassword) }} </span>
                                {{ form_widget(form.oldPassword, {'attr': {'placeholder': 'Votre ancien mot de passe'} }) }}
                              </div>
                              <div class="form-group mb-4">
                                <span class="error"> {{ form_errors(form.newPassword) }} </span>
                                {{ form_widget(form.newPassword, {'attr': {'placeholder': 'Nouveau mot de passe'} }) }}
                              </div>
                              <div class="form-group mb-4">
                                <span class="error"> {{ form_errors(form.confirmPassword) }} </span>
                                {{ form_widget(form.confirmPassword, {'attr': {'placeholder': 'Confirmation mot de passe'} }) }}
                                </div>
                              
                                <div class="mt-4">
                                    <button class="btn btn-primary " type="submit" style="width: 100%;">
                                    Modifier
                                    </button>
                                </div>
                                <div class="d-flex justify-content-center mt-3">
                                    <a href="{{path('app_admin_mon_profile')}}" class="btn btn-secondary" style="width: 100%;"> Retour </a>
                                </div>
        
                        {{ form_end(form) }}
                    </div>
                </div>
                <div class="col-xl-2 col-lg-1 col-md-12 col-sm-12"></div>
            </div>
            
        </div>
    </section>

{% endblock %}