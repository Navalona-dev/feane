{% extends 'base.html.twig' %}

{% block title %}Modification mon mot de passe{% endblock %}

{% block body %}
{% set edit = '' %}
{% for homePage in homePages %}
    {% if homePage.label == "edit-pwd" %}
        {% set edit = homePage %}
    {% endif %}
{% endfor %}
<section class="edit-password">
    <div class="container">
        <h1 class="text-center mb-4 fw-bold"> {{edit.title}} </h1>
        <div class="text-center mb-5">
            {{edit.description|raw}}
        </div>

        <div class="edit-mail-form">
            <div class="row">
                <div class="col-xl-2 col-lg-1 col-md-12 col-sm-12"></div>
                <div class="col-xl-8 col-lg-10 col-sm-12 col-md-12">
                    {{form_start(form)}}
                    <div class="card shadow p-5">
                        <div class="form-group mb-4">
                            <label for="" class="mb-2">Votre ancien mot de passe <sup class="text-danger">*</sup></label>
                            <span class="error"> {{form_errors(form.oldPassword)}} </span>
                            {{form_widget(form.oldPassword)}}
                        </div>

                        <div class="form-group mb-4">
                            <label for="" class="mb-2">Votre nouveau mot de passe <sup class="text-danger">*</sup></label>
                            <span class="error"> {{form_errors(form.newPassword)}} </span>
                            {{form_widget(form.newPassword)}}
                        </div>

                        <div class="form-group mb-4">
                            <label for="" class="mb-2">Confirmation de votre mot de passe <sup class="text-danger">*</sup></label>
                            <span class="error"> {{form_errors(form.confirmPassword)}} </span>
                            {{form_widget(form.confirmPassword)}}
                        </div>

                        <div class="form-group mb-4">
                            <button type="submit" class="btn btn-primary btn-profile text-black mb-3 btn-sm" style="width: 100%;">Modifier mon mot de passe</button>
                            <a href="{{path('app_account')}}" class="btn btn-secondary btn-sm" style="width: 100%;">Retour</a>
                        </div>
                    </div>
                    {{form_end(form)}}
                </div>
                <div class="col-xl-2 col-lg-1 col-md-12 col-sm-12"></div>
            </div>
        </div>
    </div>
</section>

{% endblock %}