{% if pageCount > 1 %}
    <nav aria-label="Page navigation">
        <ul class="pagination">
            {% if current == 1 %}
                <li class="page-item disabled"><a class="page-link" href="#" tabindex="-1" aria-disabled="true">&laquo;</a></li>
            {% else %}
                <li class="page-item"><a class="page-link" href="{{ path(route, query|merge({(pageParameterName): current-1})) }}" tabindex="-1">&laquo;</a></li>
            {% endif %}
            {% for page in pagesInRange %}
                {% if page == current %}
                    <li class="page-item active"><a class="page-link" href="#">{{ page }}</a></li>
                {% else %}
                    <li class="page-item"><a class="page-link" href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a></li>
                {% endif %}
            {% endfor %}
            {% if current == pageCount %}
                <li class="page-item disabled"><a class="page-link" href="#" tabindex="-1" aria-disabled="true">&raquo;</a></li>
            {% else %}
                <li class="page-item"><a class="page-link" href="{{ path(route, query|merge({(pageParameterName): current+1})) }}">&raquo;</a></li>
            {% endif %}
        </ul>
    </nav>
{% endif %}
